{
  "name": "Anime Telegram Bot",
  "description": "A Telegram bot to download and encode anime episodes automatically.",
  "keywords": [
    "telegram",
    "anime",
    "bot",
    "downloader",
    "encoding"
  ],
  "website": "https://github.com/SIESTAANI2002/anime20",
  "repository": "https://github.com/SIESTAANI2002/anime20",
  "logo": "https://raw.githubusercontent.com/SIESTAANI2002/anime20/main/logo.png",
  "success_url": "/",
  "scripts": {
    "postdeploy": "echo 'Anime Telegram Bot deployed successfully!'"
  },
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token",
      "required": true
    },
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
      "required": true
    },
    "DOWNLOAD_PATH": {
      "description": "Path where downloaded episodes will be stored",
      "value": "/tmp/downloads"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "image": "heroku/python",
  "addons": [
    "heroku-postgresql",
    {
      "plan": "rediscloud:30",
      "as": "REDIS"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "python -m unittest discover tests"
      }
    }
  }
}
